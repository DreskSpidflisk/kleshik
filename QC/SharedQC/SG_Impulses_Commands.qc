// Shared Impulses / Commands

#define KLESHIK_IMPULSE_SERVER_PERSONALTELEPORTER							50
#define KLESHIK_IMPULSE_SERVER_TOGGLEFLASHLIGHT								51
#define KLESHIK_IMPULSE_SERVER_THROWFLARE									52

#define KLESHIK_COMMAND_SERVER_GAMESETTINGS									"GameSettings"
#define KLESHIK_COMMAND_SERVER_CLIENTSCORES									"ClientScores"
#define KLESHIK_COMMAND_SERVER_ADVANCEDSTATISTICS							"AdvancedStatistics"

#define KLESHIK_COMMAND_SERVER_RESETPLAYERMODEL								"ResetPlayerModel"
#define KLESHIK_COMMAND_SERVER_SETPLAYERMODEL_QUAKE2						"SetPlayerModel_Quake2"
#define KLESHIK_COMMAND_SERVER_UPDATEPLAYERMODEL							"UpdatePlayerModel"
#define KLESHIK_COMMAND_SERVER_QUAKE2TAUNTANIM								"Q2TauntAnim"

// Aliases
#define KLESHIK_CLIENTALIAS_PREFIX											"kl_"
#define KLESHIK_CLIENTALIAS_PERSONALTELEPORTER								"PersonalTeleporter"
#define KLESHIK_CLIENTALIAS_TOGGLEFLASHLIGHT								"ToggleFlashLight"
#define KLESHIK_CLIENTALIAS_THROWFLARE										"ThrowFlare"

#define KLESHIK_CLIENTALIAS_QUAKE2TAUNTANIM_FLIP							"Q2Taunt_Flip"
#define KLESHIK_CLIENTALIAS_QUAKE2TAUNTANIM_SALUTE							"Q2Taunt_Salute"
#define KLESHIK_CLIENTALIAS_QUAKE2TAUNTANIM_TAUNT							"Q2Taunt_Taunt"
#define KLESHIK_CLIENTALIAS_QUAKE2TAUNTANIM_WAVE							"Q2Taunt_Wave"
#define KLESHIK_CLIENTALIAS_QUAKE2TAUNTANIM_POINT							"Q2Taunt_Point"

void SG_PrepareClientAliases()
{ // Prepare Client Aliases
	local string strCmd;
		strCmd = "";
	// Impulse Aliases
		// Personal Teleporter
		strCmd = strcat(strCmd, "alias ", KLESHIK_CLIENTALIAS_PREFIX, KLESHIK_CLIENTALIAS_PERSONALTELEPORTER, " \"impulse ", ftos(KLESHIK_IMPULSE_SERVER_PERSONALTELEPORTER), "\"\n");
		// Toggle FlashLight
		strCmd = strcat(strCmd, "alias ", KLESHIK_CLIENTALIAS_PREFIX, KLESHIK_CLIENTALIAS_TOGGLEFLASHLIGHT, " \"impulse ", ftos(KLESHIK_IMPULSE_SERVER_TOGGLEFLASHLIGHT), "\"\n");
		// Throw Flare
		strCmd = strcat(strCmd, "alias ", KLESHIK_CLIENTALIAS_PREFIX, KLESHIK_CLIENTALIAS_THROWFLARE, " \"impulse ", ftos(KLESHIK_IMPULSE_SERVER_THROWFLARE), "\"\n");
		
	// Command Aliases
		// Advanced Statistics
		strCmd = strcat(strCmd, "alias ", KLESHIK_CLIENTALIAS_PREFIX, KLESHIK_COMMAND_SERVER_ADVANCEDSTATISTICS, " \"cmd ", KLESHIK_COMMAND_SERVER_ADVANCEDSTATISTICS, "\"\n");
		// Game Settings
		strCmd = strcat(strCmd, "alias ", KLESHIK_CLIENTALIAS_PREFIX, KLESHIK_COMMAND_SERVER_GAMESETTINGS, " \"cmd ", KLESHIK_COMMAND_SERVER_GAMESETTINGS, "\"\n");
		// Client Scores
		strCmd = strcat(strCmd, "alias ", KLESHIK_CLIENTALIAS_PREFIX, KLESHIK_COMMAND_SERVER_CLIENTSCORES, " \"cmd ", KLESHIK_COMMAND_SERVER_CLIENTSCORES, "\"\n");
		
		// Reset Player Model
		strCmd = strcat(strCmd, "alias ", KLESHIK_CLIENTALIAS_PREFIX, KLESHIK_COMMAND_SERVER_RESETPLAYERMODEL, " \"cmd ", KLESHIK_COMMAND_SERVER_RESETPLAYERMODEL, "\"\n");
		
		// Quake2 Taunt Animations
		strCmd = strcat(strCmd, "alias ", KLESHIK_CLIENTALIAS_PREFIX, KLESHIK_CLIENTALIAS_QUAKE2TAUNTANIM_FLIP, " \"cmd ", KLESHIK_COMMAND_SERVER_QUAKE2TAUNTANIM, " 0\"\n");
		strCmd = strcat(strCmd, "alias ", KLESHIK_CLIENTALIAS_PREFIX, KLESHIK_CLIENTALIAS_QUAKE2TAUNTANIM_SALUTE, " \"cmd ", KLESHIK_COMMAND_SERVER_QUAKE2TAUNTANIM, " 1\"\n");
		strCmd = strcat(strCmd, "alias ", KLESHIK_CLIENTALIAS_PREFIX, KLESHIK_CLIENTALIAS_QUAKE2TAUNTANIM_TAUNT, " \"cmd ", KLESHIK_COMMAND_SERVER_QUAKE2TAUNTANIM, " 2\"\n");
		strCmd = strcat(strCmd, "alias ", KLESHIK_CLIENTALIAS_PREFIX, KLESHIK_CLIENTALIAS_QUAKE2TAUNTANIM_WAVE, " \"cmd ", KLESHIK_COMMAND_SERVER_QUAKE2TAUNTANIM, " 3\"\n");
		strCmd = strcat(strCmd, "alias ", KLESHIK_CLIENTALIAS_PREFIX, KLESHIK_CLIENTALIAS_QUAKE2TAUNTANIM_POINT, " \"cmd ", KLESHIK_COMMAND_SERVER_QUAKE2TAUNTANIM, " 4\"\n");
	
	// Execute Command
	localcmd(strCmd);
}