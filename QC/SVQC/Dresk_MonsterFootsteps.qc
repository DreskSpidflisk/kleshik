void Soldiers_WalkSound()
{
	local float nRandom;
		nRandom = random();
	if(nRandom < 0.25)
		sound(self, CHAN_AUTO, SOUND_KLESHIK_MONSTERS_SOLDIERS_WALK1, 1, MONSTERFOOTSTEPS_DEFAULT_ATTENUATION);
	else
	if(nRandom < 0.50)
		sound(self, CHAN_AUTO, SOUND_KLESHIK_MONSTERS_SOLDIERS_WALK2, 1, MONSTERFOOTSTEPS_DEFAULT_ATTENUATION);
	else
	if(nRandom < 0.75)
		sound(self, CHAN_AUTO, SOUND_KLESHIK_MONSTERS_SOLDIERS_WALK3, 1, MONSTERFOOTSTEPS_DEFAULT_ATTENUATION);
	else
		sound(self, CHAN_AUTO, SOUND_KLESHIK_MONSTERS_SOLDIERS_WALK4, 1, MONSTERFOOTSTEPS_DEFAULT_ATTENUATION);
}
